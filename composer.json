{
    "name": "artemind/credit-calculator",
    "description": "A simple PHP-based Credit Calculator that supports multiple types of loan payment calculations",
    "keywords": [
        "artemind",
        "credit-calculator",
        "payment schedule",
        "loan",
        "credit"
    ],
    "homepage": "https://github.com/artemind/credit-calculator-php",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Artem Yeremenko",
            "email": "contact@artemind.dev",
            "role": "Developer",
            "homepage": "https://artemind.dev"
        }
    ],
    "autoload": {
        "psr-4": {
            "Artemind\\CreditCalculator\\": "src/"
        }
    },
    "require": {
        "php": ">=8.2",
        "spatie/data-transfer-object": "^3.9"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "pestphp/pest": "^3.2",
        "phpstan/phpstan": "^1.12"
    },
    "scripts": {
        "analyse" : "vendor/bin/phpstan analyse",
        "baseline": "vendor/bin/phpstan --generate-baseline",
        "code-style": "./vendor/bin/php-cs-fixer --allow-risky=yes fix",
        "test": "./vendor/bin/pest"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
